#!/usr/bin/env bash

# -----------------------------------------------------------------------------

if [[ $EUID == 0 ]]; then
   echo "This script must be run as non-root user inside docker group"
   exit 1
fi

# -----------------------------------------------------------------------------

COURSE_CONTAINER=test-cpp-course
COURSE_REPO=test-cpp-course

# -----------------------------------------------------------------------------

docker exec -it --user root $COURSE_CONTAINER /bin/bash \
    --rcfile /workspace/$COURSE_REPO/docker/config/bashrc
